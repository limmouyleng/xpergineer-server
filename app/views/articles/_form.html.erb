<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div id="article_error_message">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="field form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
 
  <div class="field form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control', rows: '10'%>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :section, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select :section, options_for_select([['Plumbing', 1], ['Fire Protection
', 2], ['Electrical', 3], ['Architecture', 4], ['Civil Engineer', 5], ['Mechanical', 6], ['Computer Science', 7]]) %>
    </div>
  </div>
 
   <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>